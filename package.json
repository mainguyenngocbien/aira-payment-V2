{
  "name": "aira-payment-auth",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 7001",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "next dev -p 7001",
    "dev:full": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build": "next build || exit 0",
    "build:backend": "cd backend && npm run build",
    "build:full": "npm run build:backend && npm run build",
    "build:vercel": "node scripts/build-vercel.js",
    "start": "next start -p 7001",
    "start:backend": "cd backend && npm start",
    "start:full": "concurrently \"npm run start:backend\" \"npm run start\"",
    "start:safe": "bash scripts/start-safe.sh",
    "lint": "next lint",
    "remove-logs": "node scripts/remove-console-logs.js",
    "build:secure": "NODE_ENV=production node scripts/remove-console-logs.js && next build",
    "test-logs": "node scripts/test-production-logs.js",
    "check-env": "node scripts/check-env.js",
    "validate-env": "node scripts/validate-env.js",
    "setup": "node scripts/setup-and-run.js",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:reload": "pm2 reload all",
    "pm2:delete": "pm2 delete all",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs",
    "pm2:monitor": "pm2 monit",
    "deploy": "bash scripts/deploy.sh",
    "deploy:quick": "bash scripts/quick-deploy.sh",
    "fix:build": "bash scripts/fix-build.sh",
    "fix:prerender": "bash scripts/fix-prerender.sh",
    "monitor": "node scripts/monitor.js",
    "watcher": "node scripts/auto-build-watcher.js",
    "setup:hooks": "bash scripts/setup-git-hooks.sh",
    "test:env": "node scripts/test-environment.js",
    "test:system": "node scripts/test-system.js",
    "fix:prerender:local": "bash scripts/fix-prerender-local.sh",
    "update:colors": "node scripts/update-text-colors.js"
  },
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "daisyui": "^4.4.20",
    "firebase": "^9.23.0",
    "lucide-react": "^0.294.0",
    "next": "14.0.4",
    "postcss": "^8.4.32",
    "react": "^18",
    "react-dom": "^18",
    "react-qr-code": "^2.0.18",
    "tailwindcss": "^3.3.6"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "chokidar": "^3.5.3",
    "concurrently": "^9.2.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "ignore-loader": "^0.1.2",
    "typescript": "^5"
  }
}
